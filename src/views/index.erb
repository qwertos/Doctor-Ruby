<html>
	<!--
	Port of HTML template from the original the-doctor-is-in
	-->
	<head>
		<meta charset="utf-8" />
		<title>Doctor Ruby is in</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="" />
		<meta name="author" content="" />
		<%# TODO: if refresh %>
		<meta http-equiv="refresh" content="{{refresh}}" />
		<%# TODO: end %>

		<%# TODO: Add style sheets to static %>
		<link href="static/css/bootstrap.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding-top: 60px;
				padding-bottom: 40px;
			}
		</style>
		<link href="static/css/bootstrap-responsive.css" rel="stylesheet" />
		<link href="static/css/site.css" rel="stylesheet" />

		<link rel="apple-touch-icon-precomposed" sizes="144x144" href="static/ico/apple-touch-icon-144-precomposed.png"/>
		<link rel="apple-touch-icon-precomposed" sizes="114x114" href="static/ico/apple-touch-icon-114-precomposed.png"/>
		<link rel="apple-touch-icon-precomposed" sizes="72x72" href="static/ico/apple-touch-icon-72-precomposed.png"/>
		<link rel="apple-touch-icon-precomposed" href="static/ico/apple-touch-icon-57-precomposed.png"/>
		<link rel="shortcut icon" href="static/ico/favicon.png"/>

	</head>
	<body>
		
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="brand" href="#">The Doctor is In</a>
				</div>
			</div>
		</div>


		<div class="container">

			<%# TODO: Things and stuff %>

			<div class="row">

				<%# TODO: More things and stuff %>

				<div class="centered span4">
					<%# TODO: VV Change language %>
					<h5>{{name}}</h5>
					<img class='gravatar' src="{{datum['gravatar']}}"></img>

					{% if not datum['knowledge'] %}
						<p>We're not sure where {{name}} is...</p>
					{% else %}
					{% for device, locations in datum['knowledge'].items() %}
					{% for location in locations %}
						<p><strong>{{name}}'s</strong>
					{{device}} is checked in at
					<strong>{{location}}</strong>.</p>
					{% endfor %}
					{% endfor %}

{  endif %}
</div>
{% endfor %}
</div>

{% endfor %}
{%- endmacro %}

{% if in_data %}
{% call render_section(in_data) %}
<div class="row">
<div class="span3 push1">
<h3>The doctor is in..</h3>
</div>
</div>
{% endcall %}
<hr>
{% endif %}

{% if out_data %}
{% call render_section(out_data) %}
<div class="row">
<div class="span3 push1">
<h3>The doctor is out..</h3>
</div>
</div>
{% endcall %}
{% endif %}

<hr>

